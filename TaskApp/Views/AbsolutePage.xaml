<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laboratorio_Bimestre_1.Views.AbsolutePage"
             Title="Juego">
    <ContentPage.Content>
        <AbsoluteLayout x:Name="absoluteLayout" BackgroundColor="LightSkyBlue">
            <!-- Círculo del juego -->
            <BoxView 
                x:Name="gameCircle" 
                Color="Tomato" 
                CornerRadius="50" 
                WidthRequest="100" 
                HeightRequest="100" 
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 100, 100" 
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCircleTapped" />
                </BoxView.GestureRecognizers>
            </BoxView>
            <!-- Puntaje del jugador -->
            <Label 
                x:Name="scoreLabel" 
                Text="Puntos: 0" 
                FontSize="Large" 
                TextColor="White" 
                AbsoluteLayout.LayoutBounds="0.5, 0.1, AutoSize, AutoSize" 
                AbsoluteLayout.LayoutFlags="PositionProportional" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>